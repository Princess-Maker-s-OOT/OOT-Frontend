{
  // VS Code 디버깅 설정
  "version": "0.2.0",
  "configurations": [
    
    {
      // ✅ Next.js 서버 디버깅
      "type": "node",
      "request": "launch",
      "name": "Next.js Dev",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect",
        "${workspaceFolder}/node_modules/.bin/next",
        "dev"
      ],
      "port": 9229,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      // ✅ 단일 파일 디버깅 (예: utils/test.ts)
      "type": "node",
      "request": "launch",
      "name": "Run Current File",
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      // ✅ Chrome 브라우저 디버깅 (React 컴포넌트)
      "type": "chrome",
      "request": "launch",
      "name": "Chrome Debug",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "breakOnLoad": true
    }
  ]
}